pipeline {
    agent {
        docker {
            image "node:10"
            label "psi_rhel8"
            args  "-u root:root"
        }
    }
    stages {
        stage("install") {
            steps {
                dir("showcase") {
                    sh "npm install"
                }
            }
        }
        stage("test") {
            steps {
                dir("showcase") {
                    sh "npm run lint"
                    sh "npm run prettier:check"
                }
            }
        }
    }
}
